<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div style="font-size: 1.3em;  margin: 0 30px 0 30px;">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a style="font-size: 1.6em;" class="navbar-brand" href="#">Hospital System</a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">Home</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Appointments<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Book Appointment</a></li>
                            <li><a href="#">Reschedule Appointment</a></li>
                            <li><a href="#">Cancel Appointment</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Medical<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Guidance & Cancelling</a></li>
                            <li><a href="#">Diagnosis</a></li>
                            <li><a href="#">Stress Management</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a title="" data-toggle="modal" style="" href="#loginModal">Login/Register</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    <!-- END Fixed navbar -->

    <!-- PROGRESS BAR -->
    <div class="modal" role="dialog" aria-hidden="true" id="pleaseWaitDialog" data-backdrop="static" data-keyboard="false">
        <div style="margin-top:300px; width:800px;" class="modal-dialog">
            <h1 style="">Accessing Database...Please Wait...</h1>
            <div style="height:30px;" class="progress progress-striped active"><div class="progress-bar progress-bar-success animate" style="width: 0%;"></div></div>
        </div>
    </div>
    <!-- END OF ROGRESS BAR -->
    <!--login modal-->
    <div id="loginModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div style="width:500px;" class="modal-dialog">
            <div id="headshot" class="modal-content">
                <div class="modal-header" style="padding-bottom:0px;">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                    <ul id="myTab3" class="nav nav-tabs" style="margin-top:30px;">
                        <li class="active"><a href="#login" data-toggle="tab">Login</a></li>
                        <li><a href="#register" data-toggle="tab">Register</a></li>
                    </ul>
                </div>
                <div style="padding-left:5px;padding-right:5px;" class="modal-body">
                    <div id="myTabContentLogin" class="tab-content">
                        <div class="tab-pane fade in active" id="login">
                            <form class="navbar-form form" role="form" data-bind="submit: GetToken">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span style="width:200px;" class="input-group-addon">Reg. Number</span>
                                        <input style="width: 300px;" placeholder="Registration Number" class="form-control" name="firstname">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span style="width:200px;" class="input-group-addon">Password</span>
                                        <input style="width: 300px;" ffpdm="4j1x06h10f6jxmd6j6urs" id="passwordInput" placeholder="Password" class="form-control" type="password" name="password">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success form-control">Login</button>
                                </div>
                            </form>
                        </div>


                        <div class="tab-pane fade" id="register">
                            <form style="" id="signupForm" class="navbar-form form" role="form" data-bind="submit: SignUp">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span style="width:200px;" class="input-group-addon">SurName</span>
                                        <input style="width: 300px;" placeholder="SurName" class="form-control" name="firstname">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span style="width:200px;" class="input-group-addon">First Name</span>
                                        <input style="width: 300px;" placeholder="First name" class="form-control" name="firstname">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span style="width:200px;" class="input-group-addon">Last Name</span>
                                        <input style="width: 300px;" placeholder="Last name" class="form-control" name="lastname">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span style="width:200px;" class="input-group-addon">Reg. Number</span>
                                        <input style="width: 300px;" placeholder="Registration Number" class="form-control" name="lastname">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span style="width:200px;" class="input-group-addon">Password</span>
                                        <input style="width: 300px;" ffpdm="4j1x06h10f6jxmd6j6urs" id="passwordInput" placeholder="password" class="form-control" type="password" name="password">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span style="width:200px;" class="input-group-addon">Confirm Password</span>
                                        <input style="width:300px;" ffpdm="4j1x06h10f6jxmd6j6urs" id="passwordInput" placeholder="confirm password" class="form-control" type="password" name="confirmpassword">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success form-control">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--END login modal-->

    <div class="clear"></div>

    
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/otherScripts")
    @RenderSection("scripts", required: false)


</body>
</html>